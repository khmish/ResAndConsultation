<div style="margin: 5px" class="row">
  <p-toast position="bottom-right"></p-toast>
  <p-table #dt [columns]="cols" [value]="allRfcForConsultationRecord" [responsive]="true" dataKey="rfcId"
           rowExpandMode="single" selectionMode="single" [(selection)]="selectedConsultation" (onRowSelect)="loadRfcMeetingDetails($event)">
    <ng-template pTemplate="caption">
      List of Consultations
    </ng-template>
    <ng-template pTemplate="header" let-columns>
      <tr>
        <th style="width: 3em"></th>
        <th *ngFor="let col of columns">
          {{col.header}}
        </th>
        <th style="width: 10em"></th>
      </tr>
    </ng-template>
    <ng-template pTemplate="body" let-rowData let-expanded="expanded" let-columns="columns">
      <tr [pSelectableRow]="rowData">
        <td>
          <a href="#" [pRowToggler]="rowData">
            <i [ngClass]="expanded ? 'pi pi-chevron-down' : 'pi pi-chevron-right'"></i>
          </a>
        </td>
        <td *ngFor="let col of columns">
          <span class="ui-column-title">{{col.header}}</span>
          {{rowData[col.field]}}
        </td>
        <td>
          <button pButton class="btn" label="Create Record" (click)="createConsultationRecordFinal(rowData)"></button>
        </td>
      </tr>
    </ng-template>
    <ng-template pTemplate="rowexpansion" let-rowData let-columns="columns">
      <tr>
        <td [attr.colspan]="columns.length + 2">
          <div class="ui-g ui-fluid" style="font-size:16px;padding:20px">
            <div class="ui-g-12 ui-md-9">
              <div class="ui-g">
                <div class="ui-g-12">
                  <b>Description :</b> {{rowData.rfcDescription }}
                </div>
                <div class="ui-g-12">
                  <b>Contact Name :</b> {{rowData.orgContactName}}
                </div>
                <div class="ui-g-12">
                  <b>Contact Phone :</b> {{rowData.orgContactPhone}}
                </div>
                <div class="ui-g-12">
                  <b>Contact Email :</b> {{rowData.orgContactEmail}}
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
    </ng-template>
    <ng-template pTemplate="summary">
      There are {{allRfcForConsultationRecord?.length}} consultations
      <div style="text-align: left">
        Selected
        Consultation: {{selectedConsultation ? selectedConsultation.rfcDescription + ' - ' + selectedConsultation.orgContactName : 'none'}}
      </div>
    </ng-template>
  </p-table>
</div>

<app-meeting-details [meetingDetailsChild]="selectedRfcForMeeting"></app-meeting-details>
